#!/usr/bin/env bash

source "$(dirname "$0")/vars"

function usage {
    echo "docker-build is a tool to build and optionally push the Elixir app Docker image."
    echo ""
    echo "Usage: ./docker_build.sh [push] [version]"
    echo ""
    echo "push:    Push the image after successful build."
    echo "version: Optional version tag (e.g., v1.2.3)."
    echo ""
    echo "Examples:"
    echo "   ./docker_build.sh                  - Build the image with current git hash"
    echo "   ./docker_build.sh push v1.2.3      - Build and push with tag v1.2.3"
    exit
}

if [[ "$1" == "help" || "$1" == "--help" || "$1" == "-h" ]]; then
  usage
fi

set -e

BUILD_SHA=$(git rev-parse --short HEAD)
TAG="$2"
BASE_TAG="${DOCKER_ORG}/${SERVICE_NAME}"

# –ù–∞–∑–Ω–∞—á–∞–µ–º —Ç–µ–≥–∏
IMAGE_TAG="${BASE_TAG}:v${APP_VSN}-${BUILD_SHA}"
LATEST_TAG="${BASE_TAG}:latest"

if [ "$TAG" = "v${APP_VSN}" ]; then
  VERSION_TAG="${BASE_TAG}:${TAG}"
fi

echo "üî® Building image..."
docker build \
  --build-arg MIX_ENV=$MIX_ENV \
  --build-arg APP_NAME=$APP_NAME \
  -t $IMAGE_TAG \
  -t $LATEST_TAG \
  ${VERSION_TAG:+-t $VERSION_TAG} .

echo "‚úÖ Built: $IMAGE_TAG"

if [ "$1" = "push" ]; then
  echo "üöÄ Pushing..."
  docker push $IMAGE_TAG
  docker push $LATEST_TAG
  if [ -n "$VERSION_TAG" ]; then
    docker push $VERSION_TAG
  fi
fi
